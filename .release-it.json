{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    },
    "git": {
        "commitMessage": "chore: release v${version}"
    },
    "npm": {
        "publish": false,
        "skipChecks": true
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    }
}
